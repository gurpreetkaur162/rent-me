<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gs.rentme.Home">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/layoutapp"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="#dcecd7d7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/layy"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:onClick="drawer"
                android:src="@drawable/ic_settings"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="270dp"

                android:src="@drawable/ic_search"
                android:onClick="search"
                />

        </LinearLayout>




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layy"
            android:layout_above="@+id/bottom_navigation"
            android:id="@+id/main_frame">

        </FrameLayout>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/navigation" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00ffffff"
        android:layout_gravity="left">


        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="#ead18991"
            android:onClick="user_profile"
            android:elevation="20dp">


            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_above="@+id/email_idd"
                android:src="@drawable/ic_profile"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/home_profile"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ksamneet@gmail.com"
                android:textSize="20dp"
                android:id="@+id/email_idd"

                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:background="#000"
            />

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#dcd58f8f"
            android:elevation="20dp"
            android:onClick="home"
            android:padding="10dp">

            <ImageView
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:src="@drawable/ic_home"/>

            <TextView
                android:id="@+id/home"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Home"
                android:textColor="#000"
                android:textSize="20dp"
                />

        </LinearLayout>


        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="#000"
            />

        <LinearLayout
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#dcd19c9c"
            android:elevation="20dp"
            android:padding="10dp"
            android:onClick="Categories"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_categories" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:id="@+id/categories"/>

        </LinearLayout>


        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="#000"
            />
        <LinearLayout
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#dcdbafaf"
            android:elevation="20dp"
            android:padding="10dp"
            android:onClick="chat"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_chat"
                android:id="@+id/setting"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:id="@+id/chat"/>

        </LinearLayout>
        <View
            android:layout_width="170dp"
            android:layout_height="1dp"
            android:background="#000"/>

        <LinearLayout
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:elevation="20dp"
            android:background="#dce9c7c7"
            android:onClick="logout">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_logout"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:id="@+id/logout"/>
        </LinearLayout>

        <View
            android:layout_width="170dp"
            android:layout_height="1dp"
            android:background="#000"
            />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
